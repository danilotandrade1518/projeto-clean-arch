{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/auth/*": ["./src/auth/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/usecases/*": ["./src/domain/usecases/*"],
      "@/entities/*": ["./src/domain/entities/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/nest/*": ["./src/nest/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/adapters/*": ["./src/adapters/*"],
      "@/typeorm-tests/*": ["typeorm-tests/*"]
    }
  }
}
